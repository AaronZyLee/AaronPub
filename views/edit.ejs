<% include partials/header %>

	<h1 style="text-align: center">Edit <%= campground.name %></h1>
	<div style="width:30%; margin: 25px auto;">
		<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%= campground.name %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="campground[image]" placeholder="image url" value="<%= campground.image %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="campground[description]" placeholder="description" value="<%= campground.description%>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-default btn-block">Submit</button>
			</div>
			<a href="/campgrounds">Go back</a>			
		</form>
	</div>	

<% include partials/footer %>